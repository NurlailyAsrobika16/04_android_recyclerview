<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cat_image_desc" />
    <TextView
        android:id="@+id/Cat_name"
        android:layout_toRightOf="@id/cat_image"
        android:layout_marginBottom="8dp"
        style="@style/jenis_kucing_style"
        android:layout_toEndOf="@id/cat_image" />
    <TextView
        android:id="@+id/cat_description"
        android:layout_toRightOf="@id/cat_image"
        android:layout_below="@id/Cat_name"
        style="@style/deskripsi_kucing_style"
        android:layout_toEndOf="@id/cat_image" />

</RelativeLayout>